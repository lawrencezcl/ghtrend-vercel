# 数据库连接
# 推荐使用 Neon 或其他 PostgreSQL 数据库
DATABASE_URL=postgresql://username:password@hostname:port/database

# GitHub API Token (用于避免限流，获取更多仓库信息)
# 在 https://github.com/settings/tokens 创建，只需要 public repo 权限
GITHUB_TOKEN=ghp_your_github_token_here

# OpenAI API Key (可选，用于生成高质量文章内容)
# 如果不提供，将使用模板生成内容
OPENAI_API_KEY=sk-your_openai_api_key_here

# Vercel Blob 存储 (用于存储生成的卡片图片)
# 在 Vercel 项目设置中可以找到
BLOB_READ_WRITE_TOKEN=vercel_blob_token_here

# Telegram 发布配置
# 创建 Bot: 与 @BotFather 对话创建机器人
# 获取 Chat ID: 可以通过各种方式获取频道/群组ID
TELEGRAM_BOT_TOKEN=1234567890:ABCDEF1234567890abcdef1234567890
TELEGRAM_CHAT_ID=-1001234567890

# DEV.to 发布配置
# 在 https://dev.to/settings/extensions 创建 API Key
DEVTO_API_KEY=your_devto_api_key_here

# Medium 发布配置
# 在 https://medium.com/me/settings 创建 Integration Token
MEDIUM_TOKEN=your_medium_integration_token_here

# Webhook 安全配置 (用于国内发布器通信)
# 生成随机字符串，确保主站和国内发布器使用相同的密钥
WEBHOOK_SECRET=your_webhook_secret_for_cn_publisher
WEBHOOK_CALLBACK_SECRET=your_callback_secret_from_cn_publisher

# 可选：基础认证 (保护管理页面)
# 如果设置，访问 /admin 时需要认证
# BASIC_AUTH_USER=admin
# BASIC_AUTH_PASS=your_admin_password

# 部署相关
# Vercel 会自动设置这些，本地开发时可以手动指定
# VERCEL_URL=your-app.vercel.app
# NODE_ENV=production